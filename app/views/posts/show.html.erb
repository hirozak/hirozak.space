<header>
  <%= render 'shared/navbar' %>
  <%= render 'shared/header_image' %>
  <%= render 'shared/header_menu' %>
</header>
<div class="post-wrapper">
  <div class="container-fluid main-container">
    <div class="row">
      <div class="col-md-9">
        <div class="post">
          <div class="post-date">
            <%= @post.created_at.to_s(:published_on) %>
          </div>
          <h2 class="post-title"><%= @post.title %></h2>
          <div class="post-info">
            <div class="post-info--category">
              <%= fa_icon "home" %> <%= link_to "Home", root_path %> / <%= link_to @post.category.name, "#" %>
            </div>
            <div class="post-info--tags">
              <% @post.tag_list.each do |tag| %>
                <div class="tag">#<%= tag %></div>
              <% end %>
            </div>
          </div>
          <div class="post-text">
            <%= md_to_html(@post.text) %>
          </div>
        </div>
        <div class="previous_next">
          <div class="next">
            <span>&lsaquo; <%= next_post(@post.next) %>
            </span>
          </div>
          <div class="previous">
            <span><%= previous_post(@post.previous) %> &rsaquo;</span>
          </div>
        </div>
        <div class="row similar-posts">
          <h4 class="similar-posts--title">You Might Also Like</h4>
          <%= render partial: 'similar_post', collection: @similar_posts, as: :similar_post %>
        </div>
      </div>
      <div class="col-md-3 sticky">
        <div class="side-bar">
          <div class="side-bar--posts">
            <h2 class="side-title">Popular Posts</h2>
            <%= render partial: 'shared/post_side', collection: @popular_posts, as: :post_side%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/sub_content' %>
<%= render 'shared/footer' %>
