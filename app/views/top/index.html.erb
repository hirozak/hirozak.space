<header>
  <%= render 'shared/navbar' %>
  <%= render 'shared/header_image' %>
  <%= render 'shared/header_menu' %>
  <div class="container-fluid slider-container">
    <div class="post-slider">
      <% @slider_posts.each do |slide_post| %>
      <div class="post-slider--item">
        <%= link_to slide_post do %>
          <%= image_tag slide_post.image.url(:thumb), class:"post-slider--item_image" %>
          <div class="post-slider--item_title">
            <%= slide_post.title %>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</header>
<div class="main-wrapper">
  <div class="main-container">
    <div class="posts">
      <h1 class="main-title">New Posts</h1>
      <div class="posts-wrapper">
        <%= render partial: 'shared/post', collection: @posts %>
      </div>
      <div class="posts-pagination">
        <%= paginate @posts %>
      </div>
    </div>

    <div class="posts">
      <h2 class="main-title">Popular Posts</h2>
      <div class="posts-wrapper">
        <%= render partial: 'shared/post', collection: @popular_posts %>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/sub_content' %>
<%= render 'shared/footer' %>
