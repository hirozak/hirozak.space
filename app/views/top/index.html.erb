<header>
  <%= render 'shared/navbar' %>
  <%= render 'shared/header_image' %>
  <%= render 'shared/header_menu' %>
  <%= render 'posts/slider', posts: @slider_posts %>
</header>
<div class="main-wrapper">
  <div class="main-container">
    <div class="posts">
      <h1 class="main-title">New Posts</h1>
      <div class="posts-wrapper">
        <%= render @posts %>
      </div>
      <div class="posts-pagination">
        <%= paginate @posts %>
      </div>
    </div>

    <div class="posts">
      <h2 class="main-title">Popular Posts</h2>
      <div class="posts-wrapper">
        <%= render @popular_posts %>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/sub_content' %>
<%= render 'shared/footer' %>
