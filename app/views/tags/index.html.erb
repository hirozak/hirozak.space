<% set_meta_tags title: "Tags", og: { title: "Tags", type: 'website' }, twitter: { title: "Tags" } %>
<header>
  <%= render 'shared/navbar' %>
  <%= render 'shared/header_image' %>
  <%= render 'shared/header_menu' %>
  <%= render 'posts/slider', posts: @slider_posts %>
</header>
<div class="main-wrapper">
  <div class="container-fluid main-container">
    <div class="row posts-wrapper">
      <div class="tags col-md-6 col-md-offset-3">
        <h2 class="main-title">Tags</h2>
        <div class="tag-list">
          <%= render partial: 'tag', collection: @tags %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/sub_content' %>
<%= render 'shared/footer' %>
